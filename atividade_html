    <div id="lista">Lista</div>
    <button onclick=additem()>ADD item</button>
    <script>
    function additem(){
        const item = document.createElement("p")
        console.log(item)
        item.textContent = "Novo item"
        document.getElementById("lista").appendChild(item)
    
    }
    </script>
